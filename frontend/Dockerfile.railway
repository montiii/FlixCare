# Dockerfile f端r Railway Production
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

FROM nginx:alpine
# Entferne Default-Config
RUN rm /etc/nginx/conf.d/default.conf

# Kopiere Template (wird zur Laufzeit mit BACKEND_URL gef端llt)
COPY nginx.conf.template /etc/nginx/templates/default.conf.template

# Kopiere Build-Artefakte
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

# Setze Fallback f端r BACKEND_URL (Railway 端berschreibt dies)
CMD ["/bin/sh", "-c", "export BACKEND_URL=${BACKEND_URL:-https://flixcare-backend-production.up.railway.app} && IPV6_NS=$(grep nameserver /etc/resolv.conf | grep ':' | head -1 | awk '{print $2}') && IPV4_NS=$(grep nameserver /etc/resolv.conf | grep -v ':' | head -1 | awk '{print $2}') && if [ -n \"$IPV6_NS\" ]; then export RESOLVER=\"[$IPV6_NS]\"; elif [ -n \"$IPV4_NS\" ]; then export RESOLVER=\"$IPV4_NS\"; else export RESOLVER='8.8.8.8'; fi && envsubst '$BACKEND_URL $RESOLVER' < /etc/nginx/templates/default.conf.template > /etc/nginx/conf.d/default.conf && nginx -g 'daemon off;'"]

