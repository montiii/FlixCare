# Dockerfile f端r Railway Production
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

FROM nginx:alpine
# Entferne Default-Config
RUN rm /etc/nginx/conf.d/default.conf

# Kopiere Template (wird zur Laufzeit mit BACKEND_URL gef端llt)
COPY nginx.conf.template /etc/nginx/templates/default.conf.template

# Kopiere Build-Artefakte
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

# Setze Fallback f端r BACKEND_URL (Railway 端berschreibt dies)
CMD ["/bin/sh", "-c", "export BACKEND_URL=${BACKEND_URL:-https://flixcare-backend-production.up.railway.app} && export RESOLVER=$(grep -m1 nameserver /etc/resolv.conf | awk '{print $2}') && envsubst '$BACKEND_URL $RESOLVER' < /etc/nginx/templates/default.conf.template > /etc/nginx/conf.d/default.conf && nginx -g 'daemon off;'"]

