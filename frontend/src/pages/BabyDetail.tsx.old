import { useEffect, useState } from 'react';
import { useParams, useNavigate } from 'react-router-dom';
import {
  Box,
  Button,
  Card,
  CardContent,
  Container,
  Typography,
  CircularProgress,
  Alert,
  Tabs,
  Tab,
} from '@mui/material';
import { ArrowBack } from '@mui/icons-material';
import { babyService } from '../services/babyService';
import { feedingRecordService } from '../services/feedingRecordService';
import { temperatureRecordService } from '../services/temperatureRecordService';
import { cleaningRecordService } from '../services/cleaningRecordService';
import { Baby, FeedingRecord, TemperatureRecord, CleaningRecord } from '../types';

interface TabPanelProps {
  children?: React.ReactNode;
  index: number;
  value: number;
}

function TabPanel(props: TabPanelProps) {
  const { children, value, index, ...other } = props;
  return (
    <div role="tabpanel" hidden={value !== index} {...other}>
      {value === index && <Box sx={{ p: 3 }}>{children}</Box>}
    </div>
  );
}

export default function BabyDetail() {
  const { id } = useParams<{ id: string }>();
  const navigate = useNavigate();
  const [baby, setBaby] = useState<Baby | null>(null);
  const [feedingRecords, setFeedingRecords] = useState<FeedingRecord[]>([]);
  const [temperatureRecords, setTemperatureRecords] = useState<TemperatureRecord[]>([]);
  const [cleaningRecords, setCleaningRecords] = useState<CleaningRecord[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [tabValue, setTabValue] = useState(0);

  useEffect(() => {
    if (id) {
      loadBabyData(parseInt(id));
    }
  }, [id]);

  const loadBabyData = async (babyId: number) => {
    try {
      setLoading(true);
      const [babyData, feeding, temperature, cleaning] = await Promise.all([
        babyService.getById(babyId),
        feedingRecordService.getByBabyId(babyId),
        temperatureRecordService.getByBabyId(babyId),
        cleaningRecordService.getByBabyId(babyId),
      ]);
      setBaby(babyData);
      setFeedingRecords(feeding);
      setTemperatureRecords(temperature);
      setCleaningRecords(cleaning);
      setError(null);
    } catch (err) {
      setError('Failed to load baby details');
      console.error(err);
    } finally {
      setLoading(false);
    }
  };

  const formatDateTime = (dateTime: string) => {
    return new Date(dateTime).toLocaleString();
  };

  if (loading) {
    return (
      <Box display="flex" justifyContent="center" alignItems="center" minHeight="400px">
        <CircularProgress />
      </Box>
    );
  }

  if (!baby) {
    return (
      <Container maxWidth="lg">
        <Alert severity="error">Baby not found</Alert>
      </Container>
    );
  }

  return (
    <Container maxWidth="lg">
      <Button
        startIcon={<ArrowBack />}
        onClick={() => navigate('/babies')}
        sx={{ mb: 3 }}
      >
        Back to Babies
      </Button>

      <Card sx={{ mb: 3 }}>
        <CardContent>
          <Typography variant="h4" gutterBottom>
            {baby.name}
          </Typography>
          {baby.birthDate && (
            <Typography variant="body1" color="text.secondary">
              Birth Date: {new Date(baby.birthDate).toLocaleDateString()}
            </Typography>
          )}
          {baby.gender && (
            <Typography variant="body1" color="text.secondary">
              Gender: {baby.gender}
            </Typography>
          )}
          {baby.notes && (
            <Typography variant="body1" color="text.secondary" sx={{ mt: 2 }}>
              Notes: {baby.notes}
            </Typography>
          )}
        </CardContent>
      </Card>

      {error && (
        <Alert severity="error" sx={{ mb: 3 }}>
          {error}
        </Alert>
      )}

      <Card>
        <Box sx={{ borderBottom: 1, borderColor: 'divider' }}>
          <Tabs value={tabValue} onChange={(_, newValue) => setTabValue(newValue)}>
            <Tab label={`Feeding (${feedingRecords.length})`} />
            <Tab label={`Temperature (${temperatureRecords.length})`} />
            <Tab label={`Cleaning (${cleaningRecords.length})`} />
          </Tabs>
        </Box>

        <TabPanel value={tabValue} index={0}>
          {feedingRecords.length === 0 ? (
            <Typography color="text.secondary">No feeding records</Typography>
          ) : (
            <Box>
              {feedingRecords.map((record) => (
                <Card key={record.id} sx={{ mb: 2 }}>
                  <CardContent>
                    <Typography variant="subtitle1">
                      {formatDateTime(record.feedingTime)}
                    </Typography>
                    <Typography variant="body2" color="text.secondary">
                      Type: {record.feedingType.replace(/_/g, ' ')}
                    </Typography>
                    {record.amountMl && (
                      <Typography variant="body2" color="text.secondary">
                        Amount: {record.amountMl} ml
                      </Typography>
                    )}
                    {record.durationMinutes && (
                      <Typography variant="body2" color="text.secondary">
                        Duration: {record.durationMinutes} minutes
                      </Typography>
                    )}
                    {record.notes && (
                      <Typography variant="body2" color="text.secondary" sx={{ mt: 1 }}>
                        Notes: {record.notes}
                      </Typography>
                    )}
                  </CardContent>
                </Card>
              ))}
            </Box>
          )}
        </TabPanel>

        <TabPanel value={tabValue} index={1}>
          {temperatureRecords.length === 0 ? (
            <Typography color="text.secondary">No temperature records</Typography>
          ) : (
            <Box>
              {temperatureRecords.map((record) => (
                <Card key={record.id} sx={{ mb: 2 }}>
                  <CardContent>
                    <Typography variant="subtitle1">
                      {formatDateTime(record.measurementTime)}
                    </Typography>
                    <Typography variant="body2" color="text.secondary">
                      Temperature: {record.temperatureCelsius}Â°C
                    </Typography>
                    {record.measurementLocation && (
                      <Typography variant="body2" color="text.secondary">
                        Location: {record.measurementLocation.replace(/_/g, ' ')}
                      </Typography>
                    )}
                    {record.notes && (
                      <Typography variant="body2" color="text.secondary" sx={{ mt: 1 }}>
                        Notes: {record.notes}
                      </Typography>
                    )}
                  </CardContent>
                </Card>
              ))}
            </Box>
          )}
        </TabPanel>

        <TabPanel value={tabValue} index={2}>
          {cleaningRecords.length === 0 ? (
            <Typography color="text.secondary">No cleaning records</Typography>
          ) : (
            <Box>
              {cleaningRecords.map((record) => (
                <Card key={record.id} sx={{ mb: 2 }}>
                  <CardContent>
                    <Typography variant="subtitle1">
                      {formatDateTime(record.cleaningTime)}
                    </Typography>
                    <Typography variant="body2" color="text.secondary">
                      Type: {record.cleaningType.replace(/_/g, ' ')}
                    </Typography>
                    {record.diaperContent && (
                      <Typography variant="body2" color="text.secondary">
                        Diaper: {record.diaperContent.replace(/_/g, ' ')}
                      </Typography>
                    )}
                    {record.notes && (
                      <Typography variant="body2" color="text.secondary" sx={{ mt: 1 }}>
                        Notes: {record.notes}
                      </Typography>
                    )}
                  </CardContent>
                </Card>
              ))}
            </Box>
          )}
        </TabPanel>
      </Card>
    </Container>
  );
}
