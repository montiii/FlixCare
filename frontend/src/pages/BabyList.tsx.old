import { useEffect, useState } from 'react';
import {
  Box,
  Button,
  Card,
  CardContent,
  Container,
  Dialog,
  DialogActions,
  DialogContent,
  DialogTitle,
  Grid,
  IconButton,
  TextField,
  Typography,
  CircularProgress,
  Alert,
} from '@mui/material';
import { Add, Edit, Delete, ChildCare } from '@mui/icons-material';
import { babyService } from '../services/babyService';
import { Baby } from '../types';
import { useNavigate } from 'react-router-dom';

export default function BabyList() {
  const [babies, setBabies] = useState<Baby[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [dialogOpen, setDialogOpen] = useState(false);
  const [editingBaby, setEditingBaby] = useState<Baby | null>(null);
  const [formData, setFormData] = useState<Baby>({
    name: '',
    birthDate: '',
    gender: '',
    notes: '',
  });
  const navigate = useNavigate();

  useEffect(() => {
    loadBabies();
  }, []);

  const loadBabies = async () => {
    try {
      setLoading(true);
      const data = await babyService.getAll();
      setBabies(data);
      setError(null);
    } catch (err) {
      setError('Failed to load babies');
      console.error(err);
    } finally {
      setLoading(false);
    }
  };

  const handleOpenDialog = (baby?: Baby) => {
    if (baby) {
      setEditingBaby(baby);
      setFormData(baby);
    } else {
      setEditingBaby(null);
      setFormData({
        name: '',
        birthDate: '',
        gender: '',
        notes: '',
      });
    }
    setDialogOpen(true);
  };

  const handleCloseDialog = () => {
    setDialogOpen(false);
    setEditingBaby(null);
  };

  const handleSave = async () => {
    try {
      if (editingBaby && editingBaby.id) {
        await babyService.update(editingBaby.id, formData);
      } else {
        await babyService.create(formData);
      }
      handleCloseDialog();
      loadBabies();
    } catch (err) {
      setError('Failed to save baby');
      console.error(err);
    }
  };

  const handleDelete = async (id: number) => {
    if (window.confirm('Are you sure you want to delete this baby?')) {
      try {
        await babyService.delete(id);
        loadBabies();
      } catch (err) {
        setError('Failed to delete baby');
        console.error(err);
      }
    }
  };

  const calculateAge = (birthDate: string) => {
    const birth = new Date(birthDate);
    const today = new Date();
    const diffTime = Math.abs(today.getTime() - birth.getTime());
    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

    if (diffDays < 30) {
      return `${diffDays} days old`;
    } else if (diffDays < 365) {
      const months = Math.floor(diffDays / 30);
      return `${months} month${months > 1 ? 's' : ''} old`;
    } else {
      const years = Math.floor(diffDays / 365);
      const months = Math.floor((diffDays % 365) / 30);
      return `${years} year${years > 1 ? 's' : ''}${months > 0 ? `, ${months} month${months > 1 ? 's' : ''}` : ''} old`;
    }
  };

  if (loading) {
    return (
      <Box display="flex" justifyContent="center" alignItems="center" minHeight="400px">
        <CircularProgress />
      </Box>
    );
  }

  return (
    <Container maxWidth="lg">
      <Box sx={{ mb: 4, display: 'flex', justifyContent: 'space-between', alignItems: 'center' }}>
        <div>
          <Typography variant="h4" component="h1" gutterBottom>
            Babies
          </Typography>
          <Typography variant="body1" color="text.secondary">
            Manage baby profiles
          </Typography>
        </div>
        <Button
          variant="contained"
          startIcon={<Add />}
          onClick={() => handleOpenDialog()}
        >
          Add Baby
        </Button>
      </Box>

      {error && (
        <Alert severity="error" sx={{ mb: 3 }}>
          {error}
        </Alert>
      )}

      <Grid container spacing={3}>
        {babies.map((baby) => (
          <Grid item xs={12} sm={6} md={4} key={baby.id}>
            <Card
              sx={{
                height: '100%',
                display: 'flex',
                flexDirection: 'column',
                cursor: 'pointer',
                transition: 'transform 0.2s',
                '&:hover': {
                  transform: 'translateY(-4px)',
                  boxShadow: 4,
                },
              }}
              onClick={() => navigate(`/babies/${baby.id}`)}
            >
              <CardContent sx={{ flexGrow: 1 }}>
                <Box sx={{ display: 'flex', alignItems: 'center', mb: 2 }}>
                  <ChildCare sx={{ fontSize: 40, color: 'primary.main', mr: 2 }} />
                  <Typography variant="h5" component="div">
                    {baby.name}
                  </Typography>
                </Box>
                {baby.birthDate && (
                  <Typography variant="body2" color="text.secondary" gutterBottom>
                    {calculateAge(baby.birthDate)}
                  </Typography>
                )}
                {baby.gender && (
                  <Typography variant="body2" color="text.secondary" gutterBottom>
                    Gender: {baby.gender}
                  </Typography>
                )}
                {baby.notes && (
                  <Typography variant="body2" color="text.secondary" sx={{ mt: 1 }}>
                    {baby.notes}
                  </Typography>
                )}
              </CardContent>
              <Box sx={{ p: 1, display: 'flex', justifyContent: 'flex-end' }}>
                <IconButton
                  size="small"
                  onClick={(e) => {
                    e.stopPropagation();
                    handleOpenDialog(baby);
                  }}
                >
                  <Edit />
                </IconButton>
                <IconButton
                  size="small"
                  onClick={(e) => {
                    e.stopPropagation();
                    if (baby.id) handleDelete(baby.id);
                  }}
                >
                  <Delete />
                </IconButton>
              </Box>
            </Card>
          </Grid>
        ))}
      </Grid>

      {babies.length === 0 && (
        <Box sx={{ textAlign: 'center', mt: 4 }}>
          <Typography variant="h6" color="text.secondary">
            No babies registered yet
          </Typography>
          <Typography variant="body2" color="text.secondary">
            Click "Add Baby" to create your first baby profile
          </Typography>
        </Box>
      )}

      <Dialog open={dialogOpen} onClose={handleCloseDialog} maxWidth="sm" fullWidth>
        <DialogTitle>{editingBaby ? 'Edit Baby' : 'Add Baby'}</DialogTitle>
        <DialogContent>
          <Box sx={{ display: 'flex', flexDirection: 'column', gap: 2, mt: 2 }}>
            <TextField
              label="Name"
              value={formData.name}
              onChange={(e) => setFormData({ ...formData, name: e.target.value })}
              fullWidth
              required
            />
            <TextField
              label="Birth Date"
              type="date"
              value={formData.birthDate}
              onChange={(e) => setFormData({ ...formData, birthDate: e.target.value })}
              fullWidth
              InputLabelProps={{ shrink: true }}
            />
            <TextField
              label="Gender"
              value={formData.gender}
              onChange={(e) => setFormData({ ...formData, gender: e.target.value })}
              fullWidth
            />
            <TextField
              label="Notes"
              value={formData.notes}
              onChange={(e) => setFormData({ ...formData, notes: e.target.value })}
              fullWidth
              multiline
              rows={3}
            />
          </Box>
        </DialogContent>
        <DialogActions>
          <Button onClick={handleCloseDialog}>Cancel</Button>
          <Button onClick={handleSave} variant="contained" disabled={!formData.name}>
            Save
          </Button>
        </DialogActions>
      </Dialog>
    </Container>
  );
}
