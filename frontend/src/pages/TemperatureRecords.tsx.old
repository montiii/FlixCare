import { useEffect, useState } from 'react';
import {
  Box,
  Button,
  Card,
  CardContent,
  Container,
  Dialog,
  DialogActions,
  DialogContent,
  DialogTitle,
  FormControl,
  InputLabel,
  MenuItem,
  Select,
  TextField,
  Typography,
  CircularProgress,
  Alert,
  List,
  ListItem,
  ListItemText,
  IconButton,
  Chip,
} from '@mui/material';
import { Add, Delete } from '@mui/icons-material';
import { babyService } from '../services/babyService';
import { temperatureRecordService } from '../services/temperatureRecordService';
import { Baby, TemperatureRecord, MeasurementLocation } from '../types';

export default function TemperatureRecords() {
  const [babies, setBabies] = useState<Baby[]>([]);
  const [records, setRecords] = useState<TemperatureRecord[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [dialogOpen, setDialogOpen] = useState(false);
  const [formData, setFormData] = useState<Partial<TemperatureRecord>>({
    babyId: 0,
    measurementTime: new Date().toISOString().slice(0, 16),
    temperatureCelsius: 37.0,
    measurementLocation: MeasurementLocation.FOREHEAD,
    notes: '',
  });

  useEffect(() => {
    loadData();
  }, []);

  const loadData = async () => {
    try {
      setLoading(true);
      const [babiesData, recordsData] = await Promise.all([
        babyService.getAll(),
        temperatureRecordService.getAll(),
      ]);
      setBabies(babiesData);
      setRecords(recordsData);
      setError(null);
    } catch (err) {
      setError('Failed to load data');
      console.error(err);
    } finally {
      setLoading(false);
    }
  };

  const handleOpenDialog = () => {
    setFormData({
      babyId: babies.length > 0 ? babies[0].id : 0,
      measurementTime: new Date().toISOString().slice(0, 16),
      temperatureCelsius: 37.0,
      measurementLocation: MeasurementLocation.FOREHEAD,
      notes: '',
    });
    setDialogOpen(true);
  };

  const handleCloseDialog = () => {
    setDialogOpen(false);
  };

  const handleSave = async () => {
    try {
      if (!formData.babyId) {
        setError('Please select a baby');
        return;
      }
      await temperatureRecordService.create(formData as TemperatureRecord);
      handleCloseDialog();
      loadData();
    } catch (err) {
      setError('Failed to save record');
      console.error(err);
    }
  };

  const handleDelete = async (id: number) => {
    if (window.confirm('Are you sure you want to delete this record?')) {
      try {
        await temperatureRecordService.delete(id);
        loadData();
      } catch (err) {
        setError('Failed to delete record');
        console.error(err);
      }
    }
  };

  const formatDateTime = (dateTime: string) => {
    return new Date(dateTime).toLocaleString();
  };

  const getTemperatureColor = (temp: number) => {
    if (temp < 36.5) return 'info';
    if (temp > 37.5) return 'error';
    return 'success';
  };

  if (loading) {
    return (
      <Box display="flex" justifyContent="center" alignItems="center" minHeight="400px">
        <CircularProgress />
      </Box>
    );
  }

  return (
    <Container maxWidth="lg">
      <Box sx={{ mb: 4, display: 'flex', justifyContent: 'space-between', alignItems: 'center' }}>
        <div>
          <Typography variant="h4" component="h1" gutterBottom>
            Temperature Records
          </Typography>
          <Typography variant="body1" color="text.secondary">
            Track baby temperature measurements
          </Typography>
        </div>
        <Button
          variant="contained"
          startIcon={<Add />}
          onClick={handleOpenDialog}
          disabled={babies.length === 0}
        >
          Add Record
        </Button>
      </Box>

      {error && (
        <Alert severity="error" sx={{ mb: 3 }}>
          {error}
        </Alert>
      )}

      {babies.length === 0 && (
        <Alert severity="info" sx={{ mb: 3 }}>
          Please add a baby first before creating temperature records
        </Alert>
      )}

      <Card>
        <CardContent>
          {records.length === 0 ? (
            <Typography color="text.secondary" align="center">
              No temperature records yet
            </Typography>
          ) : (
            <List>
              {records.map((record) => (
                <ListItem
                  key={record.id}
                  secondaryAction={
                    <IconButton edge="end" onClick={() => record.id && handleDelete(record.id)}>
                      <Delete />
                    </IconButton>
                  }
                  sx={{ borderBottom: '1px solid #eee' }}
                >
                  <ListItemText
                    primary={
                      <Box sx={{ display: 'flex', alignItems: 'center', gap: 1 }}>
                        <Typography>{record.babyName}</Typography>
                        <Chip
                          label={`${record.temperatureCelsius}°C`}
                          color={getTemperatureColor(record.temperatureCelsius)}
                          size="small"
                        />
                      </Box>
                    }
                    secondary={
                      <>
                        <Typography component="span" variant="body2" color="text.primary">
                          {formatDateTime(record.measurementTime)}
                        </Typography>
                        {record.measurementLocation &&
                          ` • ${record.measurementLocation.replace(/_/g, ' ')}`}
                        {record.notes && ` • ${record.notes}`}
                      </>
                    }
                  />
                </ListItem>
              ))}
            </List>
          )}
        </CardContent>
      </Card>

      <Dialog open={dialogOpen} onClose={handleCloseDialog} maxWidth="sm" fullWidth>
        <DialogTitle>Add Temperature Record</DialogTitle>
        <DialogContent>
          <Box sx={{ display: 'flex', flexDirection: 'column', gap: 2, mt: 2 }}>
            <FormControl fullWidth>
              <InputLabel>Baby</InputLabel>
              <Select
                value={formData.babyId}
                onChange={(e) => setFormData({ ...formData, babyId: e.target.value as number })}
                label="Baby"
              >
                {babies.map((baby) => (
                  <MenuItem key={baby.id} value={baby.id}>
                    {baby.name}
                  </MenuItem>
                ))}
              </Select>
            </FormControl>
            <TextField
              label="Measurement Time"
              type="datetime-local"
              value={formData.measurementTime}
              onChange={(e) => setFormData({ ...formData, measurementTime: e.target.value })}
              fullWidth
              InputLabelProps={{ shrink: true }}
            />
            <TextField
              label="Temperature (°C)"
              type="number"
              value={formData.temperatureCelsius}
              onChange={(e) =>
                setFormData({ ...formData, temperatureCelsius: Number(e.target.value) })
              }
              fullWidth
              inputProps={{ step: 0.1, min: 30, max: 45 }}
              required
            />
            <FormControl fullWidth>
              <InputLabel>Measurement Location</InputLabel>
              <Select
                value={formData.measurementLocation}
                onChange={(e) =>
                  setFormData({
                    ...formData,
                    measurementLocation: e.target.value as MeasurementLocation,
                  })
                }
                label="Measurement Location"
              >
                {Object.values(MeasurementLocation).map((location) => (
                  <MenuItem key={location} value={location}>
                    {location.replace(/_/g, ' ')}
                  </MenuItem>
                ))}
              </Select>
            </FormControl>
            <TextField
              label="Notes"
              value={formData.notes}
              onChange={(e) => setFormData({ ...formData, notes: e.target.value })}
              fullWidth
              multiline
              rows={2}
            />
          </Box>
        </DialogContent>
        <DialogActions>
          <Button onClick={handleCloseDialog}>Cancel</Button>
          <Button onClick={handleSave} variant="contained">
            Save
          </Button>
        </DialogActions>
      </Dialog>
    </Container>
  );
}
