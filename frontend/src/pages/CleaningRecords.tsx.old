import { useEffect, useState } from 'react';
import {
  Box,
  Button,
  Card,
  CardContent,
  Container,
  Dialog,
  DialogActions,
  DialogContent,
  DialogTitle,
  FormControl,
  InputLabel,
  MenuItem,
  Select,
  TextField,
  Typography,
  CircularProgress,
  Alert,
  List,
  ListItem,
  ListItemText,
  IconButton,
} from '@mui/material';
import { Add, Delete } from '@mui/icons-material';
import { babyService } from '../services/babyService';
import { cleaningRecordService } from '../services/cleaningRecordService';
import { Baby, CleaningRecord, CleaningType, DiaperContent } from '../types';

export default function CleaningRecords() {
  const [babies, setBabies] = useState<Baby[]>([]);
  const [records, setRecords] = useState<CleaningRecord[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [dialogOpen, setDialogOpen] = useState(false);
  const [formData, setFormData] = useState<Partial<CleaningRecord>>({
    babyId: 0,
    cleaningTime: new Date().toISOString().slice(0, 16),
    cleaningType: CleaningType.DIAPER_CHANGE,
    diaperContent: DiaperContent.WET,
    notes: '',
  });

  useEffect(() => {
    loadData();
  }, []);

  const loadData = async () => {
    try {
      setLoading(true);
      const [babiesData, recordsData] = await Promise.all([
        babyService.getAll(),
        cleaningRecordService.getAll(),
      ]);
      setBabies(babiesData);
      setRecords(recordsData);
      setError(null);
    } catch (err) {
      setError('Failed to load data');
      console.error(err);
    } finally {
      setLoading(false);
    }
  };

  const handleOpenDialog = () => {
    setFormData({
      babyId: babies.length > 0 ? babies[0].id : 0,
      cleaningTime: new Date().toISOString().slice(0, 16),
      cleaningType: CleaningType.DIAPER_CHANGE,
      diaperContent: DiaperContent.WET,
      notes: '',
    });
    setDialogOpen(true);
  };

  const handleCloseDialog = () => {
    setDialogOpen(false);
  };

  const handleSave = async () => {
    try {
      if (!formData.babyId) {
        setError('Please select a baby');
        return;
      }
      await cleaningRecordService.create(formData as CleaningRecord);
      handleCloseDialog();
      loadData();
    } catch (err) {
      setError('Failed to save record');
      console.error(err);
    }
  };

  const handleDelete = async (id: number) => {
    if (window.confirm('Are you sure you want to delete this record?')) {
      try {
        await cleaningRecordService.delete(id);
        loadData();
      } catch (err) {
        setError('Failed to delete record');
        console.error(err);
      }
    }
  };

  const formatDateTime = (dateTime: string) => {
    return new Date(dateTime).toLocaleString();
  };

  if (loading) {
    return (
      <Box display="flex" justifyContent="center" alignItems="center" minHeight="400px">
        <CircularProgress />
      </Box>
    );
  }

  return (
    <Container maxWidth="lg">
      <Box sx={{ mb: 4, display: 'flex', justifyContent: 'space-between', alignItems: 'center' }}>
        <div>
          <Typography variant="h4" component="h1" gutterBottom>
            Cleaning Records
          </Typography>
          <Typography variant="body1" color="text.secondary">
            Track diaper changes and bathing
          </Typography>
        </div>
        <Button
          variant="contained"
          startIcon={<Add />}
          onClick={handleOpenDialog}
          disabled={babies.length === 0}
        >
          Add Record
        </Button>
      </Box>

      {error && (
        <Alert severity="error" sx={{ mb: 3 }}>
          {error}
        </Alert>
      )}

      {babies.length === 0 && (
        <Alert severity="info" sx={{ mb: 3 }}>
          Please add a baby first before creating cleaning records
        </Alert>
      )}

      <Card>
        <CardContent>
          {records.length === 0 ? (
            <Typography color="text.secondary" align="center">
              No cleaning records yet
            </Typography>
          ) : (
            <List>
              {records.map((record) => (
                <ListItem
                  key={record.id}
                  secondaryAction={
                    <IconButton edge="end" onClick={() => record.id && handleDelete(record.id)}>
                      <Delete />
                    </IconButton>
                  }
                  sx={{ borderBottom: '1px solid #eee' }}
                >
                  <ListItemText
                    primary={`${record.babyName} - ${record.cleaningType.replace(/_/g, ' ')}`}
                    secondary={
                      <>
                        <Typography component="span" variant="body2" color="text.primary">
                          {formatDateTime(record.cleaningTime)}
                        </Typography>
                        {record.diaperContent &&
                          ` • Diaper: ${record.diaperContent.replace(/_/g, ' ')}`}
                        {record.notes && ` • ${record.notes}`}
                      </>
                    }
                  />
                </ListItem>
              ))}
            </List>
          )}
        </CardContent>
      </Card>

      <Dialog open={dialogOpen} onClose={handleCloseDialog} maxWidth="sm" fullWidth>
        <DialogTitle>Add Cleaning Record</DialogTitle>
        <DialogContent>
          <Box sx={{ display: 'flex', flexDirection: 'column', gap: 2, mt: 2 }}>
            <FormControl fullWidth>
              <InputLabel>Baby</InputLabel>
              <Select
                value={formData.babyId}
                onChange={(e) => setFormData({ ...formData, babyId: e.target.value as number })}
                label="Baby"
              >
                {babies.map((baby) => (
                  <MenuItem key={baby.id} value={baby.id}>
                    {baby.name}
                  </MenuItem>
                ))}
              </Select>
            </FormControl>
            <TextField
              label="Cleaning Time"
              type="datetime-local"
              value={formData.cleaningTime}
              onChange={(e) => setFormData({ ...formData, cleaningTime: e.target.value })}
              fullWidth
              InputLabelProps={{ shrink: true }}
            />
            <FormControl fullWidth>
              <InputLabel>Cleaning Type</InputLabel>
              <Select
                value={formData.cleaningType}
                onChange={(e) =>
                  setFormData({ ...formData, cleaningType: e.target.value as CleaningType })
                }
                label="Cleaning Type"
              >
                {Object.values(CleaningType).map((type) => (
                  <MenuItem key={type} value={type}>
                    {type.replace(/_/g, ' ')}
                  </MenuItem>
                ))}
              </Select>
            </FormControl>
            {formData.cleaningType === CleaningType.DIAPER_CHANGE && (
              <FormControl fullWidth>
                <InputLabel>Diaper Content</InputLabel>
                <Select
                  value={formData.diaperContent}
                  onChange={(e) =>
                    setFormData({ ...formData, diaperContent: e.target.value as DiaperContent })
                  }
                  label="Diaper Content"
                >
                  {Object.values(DiaperContent).map((content) => (
                    <MenuItem key={content} value={content}>
                      {content.replace(/_/g, ' ')}
                    </MenuItem>
                  ))}
                </Select>
              </FormControl>
            )}
            <TextField
              label="Notes"
              value={formData.notes}
              onChange={(e) => setFormData({ ...formData, notes: e.target.value })}
              fullWidth
              multiline
              rows={2}
            />
          </Box>
        </DialogContent>
        <DialogActions>
          <Button onClick={handleCloseDialog}>Cancel</Button>
          <Button onClick={handleSave} variant="contained">
            Save
          </Button>
        </DialogActions>
      </Dialog>
    </Container>
  );
}
