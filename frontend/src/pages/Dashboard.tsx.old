import { useEffect, useState } from 'react';
import {
  Box,
  Card,
  CardContent,
  Container,
  Grid,
  Typography,
  CircularProgress,
  Alert,
} from '@mui/material';
import {
  ChildCare,
  Restaurant,
  Thermostat,
  CleaningServices,
} from '@mui/icons-material';
import { babyService } from '../services/babyService';
import { feedingRecordService } from '../services/feedingRecordService';
import { temperatureRecordService } from '../services/temperatureRecordService';
import { cleaningRecordService } from '../services/cleaningRecordService';

interface DashboardStats {
  totalBabies: number;
  totalFeedings: number;
  totalTemperatures: number;
  totalCleanings: number;
}

export default function Dashboard() {
  const [stats, setStats] = useState<DashboardStats>({
    totalBabies: 0,
    totalFeedings: 0,
    totalTemperatures: 0,
    totalCleanings: 0,
  });
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    loadDashboardData();
  }, []);

  const loadDashboardData = async () => {
    try {
      setLoading(true);
      const [babies, feedings, temperatures, cleanings] = await Promise.all([
        babyService.getAll(),
        feedingRecordService.getAll(),
        temperatureRecordService.getAll(),
        cleaningRecordService.getAll(),
      ]);

      setStats({
        totalBabies: babies.length,
        totalFeedings: feedings.length,
        totalTemperatures: temperatures.length,
        totalCleanings: cleanings.length,
      });
      setError(null);
    } catch (err) {
      setError('Failed to load dashboard data');
      console.error(err);
    } finally {
      setLoading(false);
    }
  };

  const statCards = [
    {
      title: 'Total Babies',
      value: stats.totalBabies,
      icon: <ChildCare sx={{ fontSize: 40 }} />,
      color: '#1976d2',
    },
    {
      title: 'Feeding Records',
      value: stats.totalFeedings,
      icon: <Restaurant sx={{ fontSize: 40 }} />,
      color: '#2e7d32',
    },
    {
      title: 'Temperature Records',
      value: stats.totalTemperatures,
      icon: <Thermostat sx={{ fontSize: 40 }} />,
      color: '#ed6c02',
    },
    {
      title: 'Cleaning Records',
      value: stats.totalCleanings,
      icon: <CleaningServices sx={{ fontSize: 40 }} />,
      color: '#9c27b0',
    },
  ];

  if (loading) {
    return (
      <Box display="flex" justifyContent="center" alignItems="center" minHeight="400px">
        <CircularProgress />
      </Box>
    );
  }

  return (
    <Container maxWidth="lg">
      <Box sx={{ mb: 4 }}>
        <Typography variant="h4" component="h1" gutterBottom>
          Dashboard
        </Typography>
        <Typography variant="body1" color="text.secondary">
          Overview of your baby tracking activities
        </Typography>
      </Box>

      {error && (
        <Alert severity="error" sx={{ mb: 3 }}>
          {error}
        </Alert>
      )}

      <Grid container spacing={3}>
        {statCards.map((card) => (
          <Grid item xs={12} sm={6} md={3} key={card.title}>
            <Card
              sx={{
                height: '100%',
                display: 'flex',
                flexDirection: 'column',
                transition: 'transform 0.2s',
                '&:hover': {
                  transform: 'translateY(-4px)',
                  boxShadow: 4,
                },
              }}
            >
              <CardContent>
                <Box
                  sx={{
                    display: 'flex',
                    alignItems: 'center',
                    justifyContent: 'space-between',
                    mb: 2,
                  }}
                >
                  <Box sx={{ color: card.color }}>{card.icon}</Box>
                </Box>
                <Typography variant="h3" component="div" gutterBottom>
                  {card.value}
                </Typography>
                <Typography variant="body2" color="text.secondary">
                  {card.title}
                </Typography>
              </CardContent>
            </Card>
          </Grid>
        ))}
      </Grid>

      <Box sx={{ mt: 4 }}>
        <Card>
          <CardContent>
            <Typography variant="h6" gutterBottom>
              Welcome to FlixCare
            </Typography>
            <Typography variant="body2" color="text.secondary">
              Track your baby's feeding times, temperatures, and cleaning activities all in one
              place. Use the navigation menu to manage your baby profiles and record activities.
            </Typography>
          </CardContent>
        </Card>
      </Box>
    </Container>
  );
}
